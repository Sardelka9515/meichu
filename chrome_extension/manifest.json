{
  "manifest_version": 3,
  "name": "Frank's AI Content Detector",
  "version": "0.2.10",
  "description": "Detect if images, videos, or MP3 files are AI generated.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",  
    "<all_urls>"           
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/image.png",
      "24": "assets/image.png",
      "32": "assets/image.png"
    }
  },
  "options_page": "options.html"
}
